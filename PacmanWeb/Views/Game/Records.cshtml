@model IEnumerable<PacmanWeb.Models.RecordsModel>

@{
    ViewData["Title"] = "Records";
}

<h4>Records</h4>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.Map).Titled("Map");
        columns.Add(model => model.Level).Titled("Level");
        columns.Add(model => model.Score).Titled("Score");
        columns.Add(model => model.Time).Titled("Time");
    })
    .Filterable()
    .Sortable()
    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<Int32, String > { { 0, "All" }, { 2, "2" }, { 4, "4" } };
        pager.ShowPageSizes = true;
        pager.PagesToDisplay = 3;
        pager.CurrentPage = 2;
        pager.RowsPerPage = 5;
    })
)