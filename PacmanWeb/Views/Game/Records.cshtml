@model IEnumerable<PacmanWeb.Models.RecordsModel>

@{
    ViewData["Title"] = "Records";
}

<h4>Records</h4>

@(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.Name).Titled("Name").InitialSort(GridSortOrder.Desc);
            columns.Add(model => model.Map).Titled("Map").InitialSort(GridSortOrder.Desc);
            columns.Add(model => model.Level).Titled("Level").InitialSort(GridSortOrder.Desc);
            columns.Add(model => model.Score).Titled("Score").InitialSort(GridSortOrder.Desc);
            columns.Add(model => model.Time).Titled("Time").InitialSort(GridSortOrder.Desc);
        })
        .Filterable()
        .Sortable()
        .Pageable(pager =>
        {
            pager.PageSizes = new Dictionary<Int32, String> { { 10, "10" }, { 20, "20" }, { 0, "All" } };
            pager.ShowPageSizes = true;
            pager.PagesToDisplay = 3;
            pager.CurrentPage = 1;
            pager.RowsPerPage = 5;
        })
)

@section Scripts{
    <script src="~/js/mvc-grid.js"></script>
    <script>
        $('.mvc-grid').mvcgrid();
    </script>
}